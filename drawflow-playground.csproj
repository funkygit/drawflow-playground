    <Compile Remove="Models\WorkflowEntities.cs" />
    <Compile Remove="Utilities\DynamicExecutor.cs" />
    <Compile Remove="Utilities\ParameterParser.cs" />
    <Compile Remove="DrawflowPlayground.Shared\**" />
    <Compile Remove="DllTestRunner\**" />
    <Compile Remove="SampleDll\**" />
    <Content Remove="DrawflowPlayground.Shared\**" />
    <Content Remove="DllTestRunner\**" />
    <Content Remove="SampleDll\**" />
    <EmbeddedResource Remove="DrawflowPlayground.Shared\**" />
    <EmbeddedResource Remove="DllTestRunner\**" />
    <EmbeddedResource Remove="SampleDll\**" />
    <None Remove="DrawflowPlayground.Shared\**" />
    <None Remove="DllTestRunner\**" />
    <None Remove="SampleDll\**" />
  </ItemGroup>

</Project>
