    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>drawflow_playground</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LiteDB" Version="5.0.21" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="DrawflowPlayground.Shared\DrawflowPlayground.Shared.csproj" />
  </ItemGroup>

  <!-- Exclude files that are now in the shared library to avoid duplicate compilation -->
